{
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "semi": true,
  "printWidth": 100,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "importOrder": ["^react$", "<THIRD_PARTY_MODULES>", "screens/(.*)$", "components/(.*)$", "ui/(.*)$", "modules/(.*)$", "constants/(.*)$" ,"^constants/(.*)$", "^[./]", "types/(.*)"],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
